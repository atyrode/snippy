{
    "autoPlay": true,
    "fullScreen": {
        "enable": true,
        "zIndex": -1
    },
    "detectRetina": true,
    "fpsLimit": 60,
    "particles": {
        "size": {
            "random": {
                "enable": true
            },
            "value": {
                "min": 2.5,
                "max": 3.5
            },
            "animation": {
                "enable": false,
                "speed": 4,
                "minimumValue": "min"
            }
        },
        "color": {
            "value": "#ffffff"
        },
        "move": {
            "enable": true,
            "outModes": {
                "default": "bounce"
            },
            "speed": 0.1
        },
        "number": {
            "value": 500
        },
        "opacity": {
            "value": {
                "min": 0.4,
                "max": 0.8
            },
            "animation": {
                "count": 0,
                "enable": true,
                "speed": 2,
                "decay": 0,
                "delay": 0,
                "sync": false,
                "mode": "random"
            }
        }
    },
    "motion": {
        "disable": false,
        "reduce": {
            "factor": 4,
            "value": true
        }
    },
    "polygon": {
        "draw": {
            "enable": true,
            "stroke": {
                "color": {
                    "value": "rgba(255,255,255,0.2)"
                },
                "width": 1,
                "opacity": 0
            }
        },
        "enable": true,
        "inline": {
            "arrangement": "equidistant"
        },
        "move": {
            "radius": 1,
            "type": "path"
        },
        "scale": 2.5,
        "type": "inline",
        "url": "./static/logo.svg",
        "position": {
            "x": 50,
            "y": 25
        }
    }
}